<div class="col-xl-3 col-lg-4 col-md-6 col-12">
    <div class="card text-black bg-light mb-3">
        <img class="card-img-top" src={{url}} alt="Card image cap">
        <div class="card-body">
            <h4 class="card-title">{{name}}</h4>
            <p class="card-text">{{description}}</p>
            <div class="card-price">
                <div class="row justify-content-end">
                    <h3>{{formatPrice price}}&nbsp;</h3>
                    <br>
                    <a class="btn btn-info product-button" href="#" onclick="{{addProduct_onclick}}(event, {{id}});">
                        <i class="fas fa-cart-plus"></i>
                    </a>
                    <a class="btn btn-info product-button" href="/funkoshop/views/cart" onclick="{{buyProduct_onclick}}(event, {{id}});">Buy</a>
                </div>

            </div>

        </div>
    </div>
</div>