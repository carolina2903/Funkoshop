<div class="container">
    {{> nav-partial }}

    {{> header-partial }}
    <style type="text/css">
        body {
            font-family: 'Varela Round', sans-serif;
        }

        .modal-register {
            color: #636363;
        }

        .modal-register .modal-content {
            padding: 20px;
            border-radius: 5px;
            border: none;
        }

        .modal-register .modal-header {
            border-bottom: none;
            position: relative;
            justify-content: center;
        }

        .modal-register h4 {
            text-align: center;
            font-size: 32px;
        }

        .modal-register .form-group {
            position: relative;
        }

        .modal-register i {
            position: absolute;
            left: 13px;
            top: 11px;
            font-size: 18px;
        }

        .modal-register .form-control {
            padding-left: 40px;
        }

        .modal-register .form-control:focus {
            border-color: #00ce81;
        }

        .modal-register .form-control,
        .modal-register .btn {
            min-height: 40px;
            border-radius: 3px;
        }

        .modal-register .hint-text {
            text-align: center;
            padding-top: 10px;
        }

        .modal-register .btn {
            background: #00ce81;
            border: none;
            line-height: normal;
        }

        .modal-register .btn:hover,
        .modal-register .btn:focus {
            background: #00bf78;
        }
    </style>
    <main>
        <div class="container">
            <div class="modal-dialog modal-register">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Sign up</h4>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="form-group">
                                <i class="fa fa-user"></i>
                                <input type="text" class="form-control" id="name" aria-describedby="nameHelp"
                                    placeholder="Name" value="test">
                            </div>
                            <div class="form-group">
                                <i class="fa fa-user"></i>
                                <input type="text" class="form-control" id="surname" aria-describedby="surnameHelp"
                                    placeholder="Surname" value="test">
                            </div>
                            <div class="form-group">
                                <i class="fa fa-map-marker-alt"></i>
                                <input type="text" class="form-control" id="address" aria-describedby="addressHelp"
                                    placeholder="Address" value="test">
                            </div>
                            <div class="form-group">
                                <i class="fa fa-birthday-cake"></i>
                                <input type="date" class="form-control" id="birth" aria-describedby="birthHelp"
                                    value="2019-11-30">
                            </div>
                            <div class="form-group">
                                <i class="fa fa-at"></i>
                                <input type="email" class="form-control" id="email" aria-describedby="emailHelp"
                                    placeholder="Email address" value="email12345@email.com">
                            </div>
                            <div class="form-group">
                                <i class="fa fa-lock"></i>
                                <input type="password" class="form-control" id="password" placeholder="Password"
                                    value="password">
                            </div>
                            <div class="form-group">
                                <i class="fa fa-lock"></i>
                                <input type="password" class="form-control" id="confirmpassword"
                                    placeholder="Confirm Password" value="password">
                            </div>
                            <div class="form-group">
                                <button onclick="Controller.controllers.signup.signup_clicked(event);"
                                    class="btn btn-info btn-block btn-lg" style="float: right">Sign up</button>
                            </div>
                        </form>

                    </div>

                </div>
            </div>

        </div> <br><br>
    </main>


    {{> footer-partial }}
</div>